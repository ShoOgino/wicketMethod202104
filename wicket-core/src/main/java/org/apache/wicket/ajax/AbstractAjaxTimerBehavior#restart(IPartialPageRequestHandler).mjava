	/**
	 * Re-enables the timer if already stopped
	 * 
	 * @param target
	 *            may be null
	 */
	public final void restart(final IPartialPageRequestHandler target)
	{
		if (stopped == true)
		{
			stopped = false;

			if (target != null)
			{
				addTimeout(target.getHeaderResponse());
			}
		}
	}

