    /**
     * Prefixes an exception message with useful information about this
     * component.
     * 
     * @param message
     *            The message
     * @return The modified message
     */
    protected final String exceptionMessage(final String message)
    {
        String s = "Page " + getPage();
        if (!(this instanceof Page))
        {
            s += ", component " + this;
        }
        return s + ": " + message;
    }

