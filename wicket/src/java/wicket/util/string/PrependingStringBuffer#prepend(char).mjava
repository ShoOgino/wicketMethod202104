	/**
	 * Prepends one char to this PrependingStringBuffer
	 * 
	 * @param ch
	 *            The char that will be prepended
	 * @return this
	 */
	public PrependingStringBuffer prepend(char ch)
	{
		int len = 1;
		if (position < len)
		{
			expandCapacity(size + len);
		}
		position -= len;
		buffer[position] = ch;
		size += len;
		return this;
	}

