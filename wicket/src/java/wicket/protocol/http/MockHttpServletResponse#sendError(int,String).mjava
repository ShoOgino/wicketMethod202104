    /**
     * Send an error code. This implementation just sets the internal error
     * state information.
     * 
     * @param code
     *            The error code
     * @param msg
     *            The error message
     * @throws IOException
     *             Not used
     */
    public void sendError(final int code, final String msg) throws IOException
    {
        this.code = code;
        errorMessage = msg;
    }

