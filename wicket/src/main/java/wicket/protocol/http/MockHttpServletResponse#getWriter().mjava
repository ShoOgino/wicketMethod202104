    /**
     * Get the print writer for writing text output for this response.
     * 
     * @return The writer
     * @throws IOException
     *             Not used
     */
    public PrintWriter getWriter() throws IOException
    {
        if (mode == MODE_BINARY)
        {
            throw new IllegalArgumentException("Can't write text after already selecting binary");
        }
        mode = MODE_TEXT;
        return printWriter;
    }

