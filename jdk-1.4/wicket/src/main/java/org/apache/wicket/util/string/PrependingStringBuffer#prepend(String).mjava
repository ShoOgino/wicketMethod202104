	/**
	 * Prepends the string to this PrependingStringBuffer
	 * 
	 * @param str
	 *            The string that will be prepended
	 * @return this
	 */
	public PrependingStringBuffer prepend(String str)
	{
		int len = str.length();
		if (position < len)
		{
			expandCapacity(size + len);
		}
		str.getChars(0, len, buffer, position - len);
		position -= len;
		size += len;
		return this;
	}

