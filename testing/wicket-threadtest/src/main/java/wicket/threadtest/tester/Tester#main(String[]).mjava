	/**
	 * Main method for just starting the server
	 * 
	 * @param args
	 */
	public static void main(String[] args) {
		// start server on its own
		int port = 8090;
		if (args.length > 0) {
			port = Integer.valueOf(args[0]);
		}
		Server server = startServer(port);
		try {
			server.start();
		} catch (Exception e) {
			e.printStackTrace();
			try {
				server.stop();
			} catch (Exception e1) {
				e1.printStackTrace();
			}
			System.exit(1);
		}
	}

